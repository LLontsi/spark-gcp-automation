# GCP Project Configuration
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars (it's in .gitignore)

project_id = "my-spark-project-123456"
region     = "europe-west1"
zone       = "europe-west1-b"

# Cluster Configuration
cluster_name = "spark"
num_workers  = 3

# Network Configuration
subnet_cidr = "10.0.0.0/24"

# Security - IMPORTANT: Change these to your IP!
allowed_ssh_ips = ["YOUR_IP_ADDRESS/32"]  # Example: ["203.0.113.42/32"]
allowed_ui_ips  = ["YOUR_IP_ADDRESS/32"]  # Example: ["203.0.113.42/32"]

# Instance Configuration
machine_type_master = "n1-standard-4"  # 4 vCPU, 15 GB RAM
machine_type_worker = "n1-standard-4"  # 4 vCPU, 15 GB RAM
machine_type_edge   = "n1-standard-2"  # 2 vCPU, 7.5 GB RAM
disk_size           = 50

# SSH Configuration
ssh_user       = "ansible"
ssh_public_key = ""  # Leave empty to use metadata, or paste your public key
